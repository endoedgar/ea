<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
    <bean id="rmiServer" class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="service" ref="accountService" />
        <property name="serviceName" value="accountService" />
        <property name="registryPort" value="1099" />
        <property name="serviceInterface" value="cs544.exercise23_2.bank.service.IAccountService" />
    </bean>
    <bean id="accountService" class="cs544.exercise23_2.bank.service.AccountService">
        <constructor-arg ref="accountDAO" />
        <constructor-arg ref="currencyConverter" />
        <constructor-arg ref="jmsSender" />
        <constructor-arg ref="logger" />
    </bean>
    <bean id="currencyConverter" class="cs544.exercise23_2.bank.service.CurrencyConverter" />
	<bean id="logger" class="cs544.exercise23_2.bank.logging.Logger" />
</beans>
